
<h1 class="display-4"  
 > All posts </h1>

  <hr class="my-4">
<div class = 'card' style="width: 50rem;">


<% @posts.each do |p|%>
  <div class="card-header">

<h3> <%= p.title%> </h3>
</div>
  <div class="card-body">

<p><%= p.text%></p>
<%= link_to 'Read More', post_path(p), :class => 'btn btn-secondary' %>
</div>
<% end %>
</div>
</div>
